<?xml version="1.0"?>
<Benchmark xmlns="http://checklists.nist.gov/xccdf/1.1" xmlns:xhtml="http://www.w3.org/1999/xhtml" id="xccdf_org.open-scap.sce-community-content_benchmark_STIG" xml:lang="en">
  <status date="2012-04-11">draft</status>
  <title>Subset of NISPOM</title>
  <description>Contains a small subset NISPOM lockdown.</description>
  <notice id="disclaimer">This XCCDF has been automatically generated, it should only serve as a baseline!</notice>
  <reference href="http://www.dss.mil/isp/odaa/nispom06.html"/>
  <platform idref="cpe:/o:redhat:enterprise_linux:6"/>
  <version>0.1</version>
  <model system="urn:xccdf:scoring:flat" />

  <Group id="xccdf_org.open-scap.sce-community-content_group_nispom" selected="true">
    <title>NISPOM</title>
    <Rule id="xccdf_org.open-scap.sce-community-content_rule_nispom-disable_finger" selected="true">
      <title>NISPOM: Disable Finger</title>
      <description>
        <xhtml:p>Disabling 'finger' prevents other (possibly remote) users from querying who is logged onto this machine.</xhtml:p>
      </description>
      <check system="http://open-scap.org/page/SCE">
        <check-import import-name="stdout"/>
        <check-content-ref href="NISPOM/NISPOM-Disable_Finger.sh"/>
      </check>
    </Rule>
    <Rule id="xccdf_org.open-scap.sce-community-content_rule_nispom-disable_rexec" selected="true">
      <title>NISPOM: Disable Remote Exec (rexec)</title>
      <description>
        <xhtml:p>Password authentication to rexec is transmitted in plain-text which is unacceptable.</xhtml:p>
      </description>
      <check system="http://open-scap.org/page/SCE">
        <check-import import-name="stdout"/>
        <check-content-ref href="NISPOM/NISPOM-Disable_Remote_Exec-rexec.sh"/>
      </check>
    </Rule>
    <Rule id="xccdf_org.open-scap.sce-community-content_rule_nispom-disable_rlogin" selected="true">
      <title>NISPOM: Disable Remote Login (rlogin)</title>
      <description>
        <xhtml:p>rlogin has unacceptable security flaws and should be replaced with SSH if possible.</xhtml:p>
        <xhtml:p>security problems:
          <xhtml:ul>
            <xhtml:li>passwords are transmitted unencrypted</xhtml:li>
            <xhtml:li>the .rlogin (or .rhosts) file is easy to abuse</xhtml:li>
            <xhtml:li>reliance on client's honesty, forged data can be used to exploit</xhtml:li>
          </xhtml:ul>
        </xhtml:p>
      </description>
      <check system="http://open-scap.org/page/SCE">
        <check-import import-name="stdout"/>
        <check-content-ref href="NISPOM/NISPOM-Disable_Remote_Login-rlogin.sh"/>
      </check>
    </Rule>
    <Rule id="xccdf_org.open-scap.sce-community-content_rule_nispom-disable_rsh" selected="true">
      <title>NISPOM: Disable Remote Shell (rsh)</title>
      <description>
        <xhtml:p>rsh has unacceptable security flaws including sending unencrypted password over the network.</xhtml:p>
      </description>
      <check system="http://open-scap.org/page/SCE">
        <check-import import-name="stdout"/>
        <check-content-ref href="NISPOM/NISPOM-Disable_Remote_Shell-rsh.sh"/>
      </check>
    </Rule>
    <Rule id="xccdf_org.open-scap.sce-community-content_rule_nispom-sshd_disable_empty_pws" selected="true">
      <title>NISPOM: sshd - Disable Empty Passwords</title>
      <description>
        <xhtml:p>Might allow the attacker to gain direct access to the machine by just guessing a username.</xhtml:p>
      </description>
      <check system="http://open-scap.org/page/SCE">
        <check-import import-name="stdout"/>
        <check-content-ref href="NISPOM/NISPOM-SSHD_Disable_Empty_Passwords.sh"/>
      </check>
    </Rule>
    <Rule id="xccdf_org.open-scap.sce-community-content_rule_nispom-sshd_disable_root_login" selected="true">
      <title>NISPOM: sshd - Disable root Login</title>
      <description>
        <xhtml:p>'root' username is a logical target for bruteforce attacks.</xhtml:p>
        <xhtml:p>Having to login as a different user and then sudo involves 2-step authorization.</xhtml:p>
      </description>
      <check system="http://open-scap.org/page/SCE">
        <check-import import-name="stdout"/>
        <check-content-ref href="NISPOM/NISPOM-SSHD_Disable_Root_Login.sh"/>
      </check>
    </Rule>
  </Group>
</Benchmark>

