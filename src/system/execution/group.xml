<xf:xccdf-fragment xmlns:xf="http://fedorahosted.org/sce-community-content/wiki/XCCDF-fragment" xmlns="http://checklists.nist.gov/xccdf/1.2" xmlns:xhtml="http://www.w3.org/1999/xhtml">
  <Group id="xccdf_org.open-scap.sce-community-content_group_system_execution" selected="true">
    <title>Execution restriction</title>

    <Rule id="xccdf_org.open-scap.sce-community-content_rule_system_execution-exec_shield" selected="true">
      <title>Check execute shield</title>
      <description>
        <xhtml:p>Checks if exec-shield is enabled.</xhtml:p>
        <xhtml:p>Enabling execute shield makes the system less easy to exploit by some security vulnerabilities.</xhtml:p>
        <xhtml:p>
          File(s) affected:
          <xhtml:ul>
            <xhtml:li>None</xhtml:li>
          </xhtml:ul>
        </xhtml:p>
      </description>
      <fix system="urn:xccdf:fix:script:sh">
      <![CDATA[
        if [ -a /proc/sys/kernel/exec-shield ]
        then
          sysctl -w kernel.exec-shield=1
        else
          echo "Cannot enable exec-shield"
          exit 1
        fi
      ]]>
      </fix>
      <check system="http://open-scap.org/page/SCE">
        <check-import import-name="stdout"/>
        <check-content-ref href="09_exec_shield.sh"/>
      </check>
    </Rule>
    <Rule id="xccdf_org.open-scap.sce-community-content_rule_system_execution-va_randomization" selected="true">
      <title>Check va randomization</title>
      <description>
        <xhtml:p>Checks whether va randomization is enabled.</xhtml:p>
        <xhtml:p>Enabling va randomization makes the system less easy to exploit by some security vulnerabilities.</xhtml:p>
        <xhtml:p>
          File(s) affected:
          <xhtml:ul>
            <xhtml:li>None</xhtml:li>
          </xhtml:ul>
        </xhtml:p>
      </description>
      <fix system="urn:xccdf:fix:script:sh">
      <![CDATA[
        if [ -a /proc/sys/kernel/randomize_va_space ]
        then
          sysctl -w kernel.randomize_va_space=1
        else
          echo "Cannot enable va-randomization"
          exit 1
        fi
      ]]>
      </fix>
      <check system="http://open-scap.org/page/SCE">
        <check-import import-name="stdout"/>
        <check-content-ref href="09_va_randomization.sh"/>
      </check>
    </Rule>
  </Group>
</xf:xccdf-fragment>
