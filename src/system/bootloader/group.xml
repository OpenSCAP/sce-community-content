<xf:xccdf-fragment xmlns:xf="http://fedorahosted.org/sce-community-content/wiki/XCCDF-fragment" xmlns="http://checklists.nist.gov/xccdf/1.2" xmlns:xhtml="http://www.w3.org/1999/xhtml">
  <Profile id="xccdf_org.open-scap.sce-community-content_profile_fedora-default">
    <select idref="xccdf_org.open-scap.sce-community-content_rule_system_bootloader-bootloader_password" selected="false"/>
  </Profile>

  <Group id="xccdf_org.open-scap.sce-community-content_group_system_bootloader" selected="true">
    <title>Bootloader</title>
    
    <Rule id="xccdf_org.open-scap.sce-community-content_rule_system_bootloader-grub_conf_permissions" selected="true">
      <title>Check grub configuration permissions</title>
      <description>
        <xhtml:p>The grub configuration must be 0600 or less.</xhtml:p>
        <xhtml:p>File permissions greater than 0600 on boot loader configuration files could allow an unauthorized user to view or modify sensitive information pertaining to system boot instructions.</xhtml:p>
        <xhtml:p>
          File(s) affected:
          <xhtml:ul>
            <xhtml:li>/boot/grub/grub.conf</xhtml:li>
            <xhtml:li>/boot/grub2/grub.cfg</xhtml:li>
          </xhtml:ul>
        </xhtml:p>
      </description>
      <ident system="http://iase.disa.mil/stigs">GEN008720</ident>
      <fix system="urn:xccdf:fix:script:sh">
      <![CDATA[
        [ -d /boot/grub ] && chmod 0600 /boot/grub/grub.conf
        [ -d /boot/grub2 ] && chmod 0600 /boot/grub2/grub.cfg
      ]]>
      </fix>
      <check system="http://open-scap.org/page/SCE">
        <check-import import-name="stdout"/>
        <check-content-ref href="GEN008720.sh"/>
      </check>
    </Rule>
    <Rule id="xccdf_org.open-scap.sce-community-content_rule_system_bootloader-bootloader_password" selected="true">
      <title>Grub should be configured for password protected boot</title>
      <description>
        <xhtml:p>Tests whether the grub configuration is set for booting to require password.</xhtml:p>
        <xhtml:p>
          File(s) affected:
          <xhtml:ul>
            <xhtml:li>/boot/grub/grub.conf</xhtml:li>
            <xhtml:li>/boot/grub2/grub.cfg</xhtml:li>
          </xhtml:ul>
        </xhtml:p>
      </description>
      <check system="http://open-scap.org/page/SCE">
        <check-import import-name="stdout"/>
        <check-content-ref href="01_bootloader_password.sh"/>
      </check>
    </Rule>
  </Group>
</xf:xccdf-fragment>

