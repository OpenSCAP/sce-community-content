<xf:xccdf-fragment xmlns:xf="http://fedorahosted.org/sce-community-content/wiki/XCCDF-fragment" xmlns="http://checklists.nist.gov/xccdf/1.2" xmlns:xhtml="http://www.w3.org/1999/xhtml">
  <xf:sort-prefix>999</xf:sort-prefix>

  <Profile id="xccdf_org.open-scap.sce-community-content_profile_nispom">
    <select idref="xccdf_org.open-scap.sce-community-content_rule_services_obsolete-disable_finger" selected="true"/>
    <select idref="xccdf_org.open-scap.sce-community-content_rule_services_obsolete-disable_rexec" selected="true"/>
    <select idref="xccdf_org.open-scap.sce-community-content_rule_services_obsolete-disable_rlogin" selected="true"/>
    <select idref="xccdf_org.open-scap.sce-community-content_rule_services_obsolete-disable_rsh" selected="true"/>
  </Profile>

  <Profile id="xccdf_org.open-scap.sce-community-content_profile_pci-dss">
    <select idref="xccdf_org.open-scap.sce-community-content_rule_services_obsolete-disable_finger" selected="true"/>
    <select idref="xccdf_org.open-scap.sce-community-content_rule_services_obsolete-disable_rexec" selected="true"/>
    <select idref="xccdf_org.open-scap.sce-community-content_rule_services_obsolete-disable_rlogin" selected="true"/>
    <select idref="xccdf_org.open-scap.sce-community-content_rule_services_obsolete-disable_rsh" selected="true"/>
    <select idref="xccdf_org.open-scap.sce-community-content_rule_services_obsolete-disable_telnetd" selected="true"/>
  </Profile>

  <Group id="xccdf_org.open-scap.sce-community-content_group_services_obsolete" selected="true">
    <title>Obsolete services</title>

    <Rule id="xccdf_org.open-scap.sce-community-content_rule_services_obsolete-disable_finger" selected="true">
      <title>Disable finger</title>
      <description>
        <xhtml:p>Check if 'finger' service is disabled</xhtml:p>
        <xhtml:p>Disabling 'finger' prevents other (possibly remote) users from querying who is logged onto this machine.</xhtml:p>
        <xhtml:p>
          File(s) affected:
          <xhtml:ul>
            <xhtml:li>/etc/xinetd.d/finger</xhtml:li>
          </xhtml:ul>
        </xhtml:p>
      </description>
      <ident system="https://www.pcisecuritystandards.org">PCIDSS-2.2.2.b</ident>
      <check system="http://open-scap.org/page/SCE">
        <check-import import-name="stdout"/>
        <check-content-ref href="NISPOM-Disable_Finger.sh"/>
      </check>
    </Rule>
    <Rule id="xccdf_org.open-scap.sce-community-content_rule_services_obsolete-disable_rexec" selected="true">
      <title>Disable remote exec (rexec)</title>
      <description>
        <xhtml:p>Check if remote exec service is disabled.</xhtml:p>
        <xhtml:p>Password authentication to rexec is transmitted in plain-text which is unacceptable.</xhtml:p>
        <xhtml:p>
          File(s) affected:
          <xhtml:ul>
            <xhtml:li>/etc/xinetd.d/rexec</xhtml:li>
          </xhtml:ul>
        </xhtml:p>
      </description>
      <ident system="https://www.pcisecuritystandards.org">PCIDSS-2.2.2.b</ident>
      <check system="http://open-scap.org/page/SCE">
        <check-import import-name="stdout"/>
        <check-content-ref href="NISPOM-Disable_Remote_Exec-rexec.sh"/>
      </check>
    </Rule>
    <Rule id="xccdf_org.open-scap.sce-community-content_rule_services_obsolete-disable_rlogin" selected="true">
      <title>Disable remote login (rlogin)</title>
      <description>
        <xhtml:p>Check if remote login service is disabled.</xhtml:p>
        <xhtml:p>Remote login has several security flaws unacceptable in secure systems. SSH is a better alternative.</xhtml:p>
        <xhtml:p>
          File(s) affected:
          <xhtml:ul>
            <xhtml:li>/etc/xinetd.d/rlogin</xhtml:li>
          </xhtml:ul>
        </xhtml:p>
      </description>
      <ident system="https://www.pcisecuritystandards.org">PCIDSS-2.2.2.b</ident>
      <check system="http://open-scap.org/page/SCE">
        <check-import import-name="stdout"/>
        <check-content-ref href="NISPOM-Disable_Remote_Login-rlogin.sh"/>
      </check>
    </Rule>
    <Rule id="xccdf_org.open-scap.sce-community-content_rule_services_obsolete-disable_rsh" selected="true">
      <title>Disable remote shell (rsh)</title>
      <description>
        <xhtml:p>Check if rsh service is disabled.</xhtml:p>
        <xhtml:p>rsh has unacceptable security flaws including sending unencrypted password over the network.</xhtml:p>
        <xhtml:p>
          File(s) affected:
          <xhtml:ul>
            <xhtml:li>/etc/xinetd.d/rsh</xhtml:li>
          </xhtml:ul>
        </xhtml:p>
      </description>
      <ident system="https://www.pcisecuritystandards.org">PCIDSS-2.2.2.b</ident>
      <check system="http://open-scap.org/page/SCE">
        <check-import import-name="stdout"/>
        <check-content-ref href="NISPOM-Disable_Remote_Shell-rsh.sh"/>
      </check>
    </Rule>
    <Rule id="xccdf_org.open-scap.sce-community-content_rule_services_obsolete-disable_telnetd" selected="true">
      <title>Disable Telnet service</title>
      <description>
        <xhtml:p>Check if telnet service is disabled.</xhtml:p>
        <xhtml:p>Allowing telnet on a system is insecure as telnet does not use encryption for sending user credentials.</xhtml:p>
        <xhtml:p>
          File(s) affected:
          <xhtml:ul>
            <xhtml:li>/etc/xinetd.d/telnet</xhtml:li>
          </xhtml:ul>
        </xhtml:p>
      </description>
      <ident system="https://www.pcisecuritystandards.org">PCIDSS-2.2.2.b</ident>
      <check system="http://open-scap.org/page/SCE">
        <check-import import-name="stdout"/>
        <check-content-ref href="16_telnet_config.sh"/>
      </check>
    </Rule>
  </Group>
</xf:xccdf-fragment>
